model User {
  id          String  @id @default(cuid())
  firebaseUid String  @unique
  email       String  @unique
  name        String?
  image       String?

  role Role @default(USER)

  photos        Photo[]
  albumsCreated Album[] @relation("UserAlbums")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
  @@index([createdAt])
}
