model Photo {
  id String @id @default(cuid())

  status PhotoStatus @default(PENDING)

  /**
   * S3 object key: photos/yyyy/mm/uuid.ext
   * Ключ immutable => CDN cache forever
   */
  key String @unique

  originalName String?
  contentType  String
  size         Int

  width  Int?
  height Int?

  createdById String?
  createdBy   User?   @relation(fields: [createdById], references: [id], onDelete: SetNull)

  createdAt DateTime  @default(now())
  deletedAt DateTime?

  @@index([status, createdAt])
  @@index([deletedAt])
}
